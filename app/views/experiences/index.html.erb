  <div class="wrapper">
    <h1>Browse All Experiences</h1>
    <div class="cards">
        <% @experiences.each do |experience| %>
          <%= # link_to experience_path(experience) do %>
            <div class="card-experience" style="height: 669px; width: 495;">
              <%= cl_image_tag("sample", width: 460, height: 331, crop: :fill) %>
              <h4><%= experience.title %></h4>
              <p><%= experience.location %> | <%= experience.duration %> | <%= experience.category %> | <%= experience.price %></p>
              <p><%= experience.description %></p>
            </div>
          <% # end %>
        <% end %>
    </div>

    <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>



  </div>
