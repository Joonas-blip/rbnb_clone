  <div class="wrapper">
    <h1>Browse All Experiences</h1>
    <div class="cards">
        <% @experiences.each do |experience| %>
            <div class="card-experience">
              <%= cl_image_tag("sample", width: 460, height: 331, crop: :fill) %>
              <div class="card-info">
                <h5><%= experience.title %></h5>
                <p><%= experience.location %> | <%= experience.duration %> hours | <%= experience.category %></p>
                <p><%= experience.description %></p>
              </div>
              <ul class="view-price">
                <li class="button"><a>View</a></li>
                <li>$25/hour</li>
              </ul>
            </div>
        <% end %>
    </div>

    <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
