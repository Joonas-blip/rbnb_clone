<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://icon-library.com/images/tour-icon/tour-icon-25.jpg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto nb-link-container">
      <li class="nav-item">
        <%= link_to "Browse Experiences", experiences_path, class: "nav-link nb-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Become A Guide", "#", class: "nav-link nb-link" %>
      </li>
      <li class="nav-item dropdown nb-avatar">
        <%= image_tag "https://cdn-icons-png.flaticon.com/512/64/64572.png", class: "avatar dropdown-toggle nb-avatar", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if current_user.nil? %>
          <% elsif current_user.guide? %>
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
          <% end %>
          <% if current_user.nil? %>
            <%= link_to "Sign In", new_user_session_path, class: "dropdown-item" %>
          <% else %>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
